rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /smarthomesystemautomation/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /smarthomesystemautomation/{parent}/device/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/device/{document} {
      allow read: if true;
    }


    match /smarthomesystemautomation/{parent}/routine/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/routine/{document} {
      allow read: if true;
    }


    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth.uid == document;
      allow write: if request.auth != null;
      allow delete: if request.auth.uid == document;
    }
  }
}
